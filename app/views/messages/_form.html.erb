<div class="form-group msg-form">
  <%= form_with(model: [ room, message],
                class:'d-flex',
                data: {
                  controller: "reset_form",
                  action: "turbo:submit-end->reset_form#reset" } ) do |form| %>
      <%= form.hidden_field :room_id, value: room.id %>
      <%= form.text_area :content, id: 'chat-text', class: 'form-control msg-content', autocomplete: 'off' %>
      <%= form.submit data: {disable_with: false}, class: 'btn btn-primary' %>
<% end %>
</div>
